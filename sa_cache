		%localtoprcpt = ();

		# Top rejection statistics
		$top = 0;
		print OUT "\%::topreject = (\n";
		print OUT "'rule' => {";
		foreach my $d (sort { $localtopreject{rule}{$b} <=> $localtopreject{rule}{$a} } keys %{$localtopreject{rule}}) {
			last if ($top == $CONFIG{TOP});
